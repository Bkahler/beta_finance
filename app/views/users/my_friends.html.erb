<%= render 'friendships/lookup' %>
<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="page-header" colspan="3">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th> Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%=friend.full_name%> </td>
          <td><%=friend.email%> </td>
          <td> <%= link_to "View Profile", user_path(friend), class:"btn btn-primary btn-xs" %> </td>
          <td> <%= link_to 'remove friend',
                            friendship_path(friend),
                            :method => :delete,
                            :data => {:confirm => "Are you sure?"},
                            :class => "btn btn-danger btn-xs"
                %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="col-lg-12 row">
    <p class="lead"> You don't have any friendships yet.</p>
  </div>
<% end %>